<odoo>

 <template id="before_header" inherit_id="portal.frontend_layout" name="Header">
    <xpath expr="//header" position="before">

	        <div class="oe_structure oe_structure_solo" id="oe_structure_header_default_1">
                    <t t-call="theme_pa.s_content_to_banner"/>
                </div>

    </xpath>
</template>


<!-- Header-->
 <template id="replace_header" inherit_id="portal.frontend_layout" name="Header">
    <xpath expr="//header" position="replace">
        <div class="menu-btn">
            <a href="javascript:void(0);">
                <i class="fa fa-bars"></i>
            </a>
        </div>
        <header>
          <link rel="stylesheet" type="text/css" href="/web/static/lib/fontawesome/css/font-awesome.css"/>
            <nav class="tonavbar">
                <div class="max-width">
                    <div class="logo logo-mobile-view">
                        <img src="/theme_penguin_apparels/static/src/images/logos/PenguinApparels-Logo.png" alt="Penguin Apparels Logo"/>
                        <a href="/../"><b>Penguin Apparels</b></a>
                    </div>
                    <ul class="menu">
                        <div class="logo">
                            <img src="/theme_penguin_apparels/static/src/images/logos/PenguinApparels-Logo.png" alt="Penguin Apparels Logo"/>
                            <a href="/../"><b>Penguin Apparels</b></a>
                        </div>
                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                    <li>
                                        <t t-set="item_class" t-value="'nav-item'"/>
                                        <t t-set="link_class" t-value="'nav-link'"/>
                                    </li>
                                    </t>
                                </t>
                        <li><a class="primary-button contactbtn" href="/contactus">REACH US</a></li>
                    </ul>   
                </div>
            </nav>
        </header>
    </xpath>
</template>
</odoo>
