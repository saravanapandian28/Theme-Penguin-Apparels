<odoo>
<template id="s_homepage_foot_banner" name="foot banner">
       <section class="centered-content pt32 s_call_to_action o_cc o_colored_level" data-snippet="s_homepage_foot_banner" data-name="foot banner">
        <div class="pa-site-width">
          <div class="row pb16">
            <div class="col-md-9 pb16 o_colored_level">
              <h3 class="primary-heading fontsize2 centered-content o_default_snippet_text">We ship to 26+ Countries as We are talking</h3>
            </div>
            <div class="col-md-3 pt8 o_colored_level">
              <a href="/contactus" class="primary-button centered-content o_default_snippet_text">Talk to us</a>
            </div>
          </div>
        </div>
        <div class="pt16  w-100">
          <picture>
            <source media="(max-width: 991px) and (min-width: 768px)" srcset="/theme_pa/static/src/images/Footer-Banner-Tablet-View.jpg">
              <source media="(min-width: 991px)" srcset="/theme_pa/static/src/images/Footer-Banner-Web_View.png">
                <source media="(max-width: 768px)" srcset="/theme_pa/static/src/images/Footer-Banner-Tablet-View.jpg">
                  <img width="100%" src="/theme_pa/static/src/images/Footer-Banner-Web_View.png" alt="Cutting Cloth image" loading="lazy"/>
                </source>
              </source>
            </source>
          </picture>
        </div>
      </section>
</template>
<template id="place_into_hg" inherit_id="website.snippets" name="Place into hg">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_pa.s_homepage_foot_banner" t-thumbnail="/theme_pa/static/src/images/logos/PenguinApparels-Logo.png"/>
    </xpath>
</template>
</odoo>