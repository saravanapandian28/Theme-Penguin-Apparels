<template id="s_contact_banner" name="contact banner">
      <section class="s_call_to_action o_cc pt48 pb24 o_colored_level" data-snippet="s_contact_banner" data-name="contact banner">
          <div class="small-banner blue-layer-image">
            <img class="w-100" src="/theme_pa/static/src/images/contact-banner.jpg" alt="Penguin Apparels Office" loading="lazy"/>
            <div class="small-banner-text centered-content">
              <h1 class="primary-heading fontsize2 pb64 pt64 text-white o_default_snippet_text">Contact Us Now</h1>
            </div>
          </div>
        </section>
</template>

<template id="place_into_contactpage" inherit_id="website.snippets" name="Place into contactpage">
    <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
        <t t-snippet="theme_pa.s_contact_banner"
                t-thumbnail="/theme_pa/static/src/images/logos/folded.png"/>
    </xpath>
</template>